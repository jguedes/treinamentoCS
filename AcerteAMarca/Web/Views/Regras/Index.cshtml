@model IEnumerable<Dominio.Premiacao>

@{
    ViewBag.Title = "Index";
    string tit = Model.First<Dominio.Premiacao>().ObjetoPremio;
}

<h2>Regras para a premiação @tit</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { premiacaoId = Model.First<Dominio.Premiacao>().Id })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Regras.First<Dominio.Regra>().Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.First<Dominio.Premiacao>().Regras) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
